<?xml version="1.0" encoding="UTF-8"?>
<suite name="AutomationTestSuite" parallel="methods" thread-count="3" verbose="1">
    
    <parameter name="browser" value="chrome"/>
    
    <listeners>
        <!-- Add custom listeners here if needed -->
    </listeners>
    
    <!-- Smoke Test Suite -->
    <test name="SmokeTests" preserve-order="true">
        <parameter name="environment" value="staging"/>
        <classes>
            <class name="org.example.tests.LoginTest">
                <methods>
                    <include name="verifyLoginPageLoad"/>
                    <include name="testValidLogin"/>
                </methods>
            </class>
        </classes>
    </test>
    
    <!-- Regression Test Suite -->
    <test name="RegressionTests" preserve-order="false">
        <parameter name="environment" value="staging"/>
        <classes>
            <class name="org.example.tests.LoginTest"/>
            <!-- Add more test classes here -->
        </classes>
    </test>
    
    <!-- Data-Driven Tests -->
    <test name="DataDrivenTests" preserve-order="false">
        <parameter name="environment" value="staging"/>
        <classes>
            <class name="org.example.tests.LoginTest">
                <methods>
                    <include name="testLoginWithSimpleData"/>
                </methods>
            </class>
        </classes>
    </test>
    
</suite>
